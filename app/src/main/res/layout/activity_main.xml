<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#36393F">

    <!-- VIEW 1: LOGIN -->
    <LinearLayout
        android:id="@+id/view_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_login"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#5865F2"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_subtitle"
            android:textColor="#B9BBBE"
            android:textSize="16sp"
            android:layout_marginBottom="48dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_token"
            app:startIconDrawable="@android:drawable/ic_lock_lock"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_token_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="#FFFFFF" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_discord_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/btn_login_discord"
            app:cornerRadius="8dp"
            android:backgroundTint="#2F3136"
            android:textColor="#FFFFFF"
            app:strokeColor="#5865F2"
            app:strokeWidth="1dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/btn_login"
            android:layout_marginTop="24dp"
            app:cornerRadius="8dp"
            android:backgroundTint="#5865F2"/>
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_token_guide_login"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_token_guide"
            android:textColor="#B9BBBE"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- VIEW 2: DASHBOARD (HOME) -->
    <LinearLayout
        android:id="@+id/view_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#36393F"
        android:visibility="gone">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="end">
            <ImageView
                android:id="@+id/btn_about"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#B9BBBE"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:id="@+id/btn_logout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="#DCDDDE"/>
        </LinearLayout>

        <!-- Center Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- STATUS RING CONTAINER -->
            <FrameLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp">
                
                <com.example.customrpc.ParticleRingView
                    android:id="@+id/particle_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                    
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_label"
                        android:letterSpacing="0.2"
                        android:textSize="12sp"
                        android:textColor="#B9BBBE"/>
                    <TextView
                        android:id="@+id/tv_dashboard_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status_offline"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#ED4245"/>
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:id="@+id/tv_dashboard_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desc_service_idle"
                android:textColor="#DCDDDE"
                android:layout_marginBottom="32dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_toggle_connection"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="@string/btn_start"
                android:textSize="18sp"
                app:cornerRadius="30dp"
                android:backgroundTint="#5865F2"/>
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_stop_service"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_kill_service"
                android:textColor="#ED4245"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Bottom Bar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_open_config"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_configure"
            android:layout_margin="16dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4F545C"/>
    </LinearLayout>


    <!-- VIEW 3: SETTINGS (CONFIG FORM) -->
    <ScrollView
        android:id="@+id/view_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#36393F"
        android:padding="16dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_configuration"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp"/>

            <!-- APP ID -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_app_id"
                android:layout_marginBottom="8dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/app_id_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textColor="#FFFFFF"/>
            </com.google.android.material.textfield.TextInputLayout>
            
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_app_name"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/app_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- ACTIVITY TYPE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_activity_type"
                android:textColor="#B9BBBE"
                android:layout_marginBottom="8dp"/>
            <Spinner
                android:id="@+id/activity_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:drawable/btn_dropdown"
                android:backgroundTint="#B9BBBE"
                android:layout_marginBottom="16dp"/>



            <!-- DETAILS & STATE -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_details"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/details_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_state"
                android:layout_marginBottom="16dp"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/state_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PARTY -->
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_party_size"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_marginEnd="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/party_size_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_party_max"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/party_max_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- TIMESTAMP -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_timestamps"
                android:textColor="#B9BBBE"
                android:layout_marginBottom="8dp"/>
            <Spinner
                android:id="@+id/timestamp_spinner"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@android:drawable/btn_dropdown"
                android:backgroundTint="#B9BBBE"
                android:layout_marginBottom="8dp"/>
            
            <LinearLayout
                android:id="@+id/custom_timestamp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginBottom="16dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pick_start_time"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_ts_start"
                        android:textColor="#B9BBBE"
                        app:strokeColor="#4F545C"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_pick_end_time"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_ts_end"
                        android:layout_marginStart="8dp"
                        android:textColor="#B9BBBE"
                        app:strokeColor="#4F545C"/>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingTop="4dp">
                     <TextView android:id="@+id/tv_start_time_val" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="@string/ts_none" android:gravity="center" android:textColor="#72767D" android:textSize="12sp"/>
                     <TextView android:id="@+id/tv_end_time_val" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="@string/ts_none" android:gravity="center" android:textColor="#72767D" android:textSize="12sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- IMAGES -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" text="@string/label_large_image" android:textColor="#B9BBBE" android:layout_marginTop="16dp"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lay_large_image_key"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_image_key"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:endIconMode="custom"
                    app:endIconDrawable="@android:drawable/ic_menu_search"
                    android:layout_marginEnd="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/large_image_key_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_image_text"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/large_image_text_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" text="@string/label_small_image" android:textColor="#B9BBBE"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="16dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/lay_small_image_key"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_image_key"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:endIconMode="custom"
                    app:endIconDrawable="@android:drawable/ic_menu_search"
                    android:layout_marginEnd="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/small_image_key_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_image_text"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/small_image_text_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- BUTTONS -->
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" text="@string/label_btn1" android:textColor="#B9BBBE"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_btn_label"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_marginEnd="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/btn1_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_btn_url"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/btn1_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

             <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" text="@string/label_btn2" android:textColor="#B9BBBE"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="24dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_btn_label"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_marginEnd="8dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/btn2_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_btn_url"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/btn2_url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#4F545C" android:layout_marginBottom="16dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_apply"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/btn_save_apply"
                android:backgroundTint="#57F287"
                app:cornerRadius="8dp"
                android:textColor="#000000"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_config"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_back_dashboard"
                android:textColor="#DCDDDE"
                android:layout_marginBottom="32dp"/>

        </LinearLayout>
    <!-- Settings View (truncated for brevity, keep existing content here) -->
    </ScrollView>

    <!-- About View -->
    <LinearLayout
        android:id="@+id/view_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:background="#36393F"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_app_logo_new"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_version"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_dev"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_github"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_github"
                app:icon="@android:drawable/ic_menu_view"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:textColor="#FFFFFF"
                app:strokeColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_email"
                app:icon="@android:drawable/ic_dialog_email"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:textColor="#FFFFFF"
                app:strokeColor="#FFFFFF"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_donate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_donate"
                app:icon="@android:drawable/star_on"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFEB3B"
                android:textColor="#000000"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_desc"
            android:textAlignment="center"
            android:layout_marginBottom="32dp"
            android:textColor="?attr/colorOnSurface"/>

        <Button
            android:id="@+id/btn_back_about"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            app:icon="@android:drawable/ic_menu_revert"/>

    </LinearLayout>

</FrameLayout>